<idea-plugin>
  <id>br.com.viasoft</id>
  <name>CopyPlaceHolders</name>
  <version>1.0</version>
  <vendor email="gaspar@viasoft.com.br" url="http://www.viasoft.com.br">VIASOFT</vendor>

  <description><![CDATA[
      Copy text by replacing variables with placeholders
    ]]></description>

  <change-notes><![CDATA[
      Copy text by replacing variables with placeholders
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <action class="br.com.viasoft.CopyPlaceHolders"
            description="Copia o sql substituindo as variaveis pelos placeholder"
            popup="true"
            text="Flyway"
            id="viasoft-flyway-action">
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt c"/>
      <add-to-group group-id="EditorPopupMenu" anchor="last"/>
    </action>
  </actions>

</idea-plugin>